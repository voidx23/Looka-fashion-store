            paymentSelected = true;
            break;
          }
        }
  
        if (!paymentSelected) {
          event.preventDefault();
          swal({
            title: "Payment method not selected",
            text: "Please select a payment method to proceed.",
            icon: "error",
            button: "OK",
          });
        }
