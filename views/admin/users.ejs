                  <div class="dropdown-divider"></div>
                  <a class="dropdown-item" href="/admin/logout">Log out</a>
                </div>
              </li>
            </ul>
          </div>
        </nav>

        <section>
          <table class="table table-striped table-light mt-5" id="myTable">
            <thead>
              <tr>
                <th
                  scope="col"
                  style="background-color: rgb(5, 5, 42); color: white"
                >
                  No
                </th>
                <th
                  scope="col"
                  style="background-color: rgb(5, 5, 42); color: white"
                >
                  Name
                </th>
                <th
                  scope="col"
                  style="background-color: rgb(5, 5, 42); color: white"
                >
                  Email
                </th>
                <th
                  scope="col"
                  style="background-color: rgb(5, 5, 42); color: white"
                >
                  Phone
                </th>
                <th
                  scope="col"
                  style="background-color: rgb(5, 5, 42); color: white"
                >
                  Options
                </th>
              </tr>
            </thead>
            <tbody>
              <% usersList.forEach((item, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= item.name %></td>
                <td><%= item.email %></td>
                <td><%= item.mobile %></td>
                <td>
                  <% if (item.isActive) { %>
                  <a
                    class="btn btn-danger"
                    href="/admin/userBlock/<%= item._id %>"
                    onclick="confirmBlockUser(event, '<%= item._id %>')"
                    >Block</a
                  >
                  <% } else { %>
                  <a
                    class="btn btn-primary"
                    href="/admin/userUnBlock/<%= item._id %>"
                    onclick="confirmUnblockUser(event, '<%= item._id %>')"
                    >Unblock</a
                  >
                  <% } %>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
          <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-end">
              <% if (currPage !== 1) { %>
              <li class="page-item">
                <a
                  class="page-link"
                  href="/admin/user?page=<%= currPage-1 %>"
                  tabindex="-1"
                  >Previous</a
                >
              </li>
              <% } %> <% for( let i = 1; i <= pages; i++ ) { %>

              <li class="page-item">
                <a class="page-link" href="/admin/user?page=<%=i %>"
                  ><%= i %></a
                >
              </li>

              <% } %> <% if (currPage !== pages ) { %>
              <li class="page-item">
                <a class="page-link" href="/admin/user?page=<%= currPage+1 %>"
                  >Next</a
                >
              </li>
              <% } %>
            </ul>
                  
          </nav>
           
        </section>
      </div>
    </div>
  </body>

  <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>

  <script>
    function confirmBlockUser(event, userId) {
      event.preventDefault();
      Swal.fire({
        title: "Are you sure?",
        text: "You are about to block this user",
        icon: "warning",
        showCancelButton: true,
        confirmButtonText: "Yes, block it!",
        cancelButtonText: "No, cancel",
        reverseButtons: true,
      }).then((result) => {
        if (result.isConfirmed) {
          window.location.href = "/admin/userBlock/" + userId;
        }
      });
    }

    function confirmUnblockUser(event, userId) {
      event.preventDefault();
      Swal.fire({
        title: "Are you sure?",
        text: "You are about to unblock this user",
        icon: "warning",
        showCancelButton: true,
        confirmButtonText: "Yes, unblock it!",
        cancelButtonText: "No, cancel",
        reverseButtons: true,
      }).then((result) => {
        if (result.isConfirmed) {
          window.location.href = "/admin/userUnBlock/" + userId;
        }
      });
    }
    $(document).ready(function () {
      $("#myTable").DataTable();
    });
  </script>
  <script src="../js/admin-js/app.js"></script>
  <!-- for highlighting navigation bar items -->
  <script src="/javascripts/js-admin/adminActiveNav.js"></script>
</html>
