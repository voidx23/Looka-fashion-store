      <main class="content">
        <div class="container">
          <style>
            .add-product-button {
              background-color: rgb(44, 111, 255);
              color: rgb(248, 242, 242);
              font-weight: bold;
              border: none;
              padding: 12px 20px;
              border-radius: 5px;
              font-size: 16px;
              cursor: pointer;
              float: right; /* add this line */
            }
            table {
            margin-top: 8rem;
          }
         
          </style>
          <a href="/admin/addProduct">
            <button type="button" class="add-product-button">
              Add Product
            </button>
          </a>
        </div class="mt-5"><br>
        
        <table class="table table-striped table-light mt-5">
        
          <thead>
            <tr style="border-width: 5px; background-color: rgb(245, 237, 237);" >
              <th scope="col">No</th>
              <th scope="col">Name</th>
              <th scope="col">Catogory</th>
              <th scope="col">Description</th>
              <th scope="col">Price</th>
              <th scope="col">Quantity</th>
              <th>Image</th>
              <th>Option</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach((item ,index)=> { %>
        
            <tr>
              <th scope="row"><%= index+1 %></th>
              <td><%= item.name %></td>
              <td><%= item.productCategory %></td>
              <td><%= item.description %></td>
              <td><%= item.price %></td>
              <td><%= item.quantity %></td>
              <td>
                <img
                  style="width: 50px; height: 50px"
                  src="/uploads/<%= item.images[0] %>"
                  alt=""
                />
              </td>
              <td>
                <div style="display: flex;">
                  <a href="/admin/editProduct/<%=item._id%>" class="btn btn-primary btn-sm me-3" style="border-radius: 20px;">Edit</a>
                  <!-- <form action="/admin/deleteProduct/<%=item._id%>?_method=DELETE" method="post"
                    class="position-relative">
                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm(`Are You Sure Want to Delete <%=item.name%>`)" >
                      Delete
                    </button></form> -->
                </div>
               
              
              </td>
            </tr>
        
            <% }) %>
          </tbody>
        </table>
      </main>
    </div>
