            <style>
                #loader {
                    visibility: hidden;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background-color: rgba(0, 0, 0, 0.5);
                    z-index: 9999;
                }
            
                #loader>span {
                    display: block;
                    width: 50px;
                    height: 50px;
                    border-radius: 50%;
                    border: 5px solid #fff;
                    border-top-color: #000;
                    animation: spin 1s linear infinite;
                }
            
                /* CSS code for the loader animation */
                @keyframes spin {
                    from {
                        transform: rotate(0);
                    }
            
                    to {
                        transform: rotate(360deg);
                    }
                }
            </style>
          
                    <h2 style="text-align: center; color: #567086; margin-top: 10px;">OFFER MANAGEMENT</h2>
                    <div class="container-fluid p-0">
                        <div class="row">
                            <div class="col-12">
                                <div class="card" style="background-color: #567086;">
                                    <div class="card-header">
                                        <h5 class="card-title mb-0"></h5>
                                        <div class="container mt-4">
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <form action="/admin/offers" id="cpn-gen-form" method="post"
                                                        style="width: 270px;">
                                                        <div class="mb-3">
                                                            <label for="title" class="form-label ">Title</label>
                                                            <input type="text" name="title" class="form-control" required />
                                                        </div>
                                                        <div class="mb-3">
                                                            <label for="product" class="form-label ">Select
                                                                Product</label>
                                                            <div class="input-group">
                                                                <!-- <span class="input-group-text"><i
                                                                        class="bi bi-currency-dollar"></i></span> -->
                                                                <select name="product" class="form-select" required>
                                                                    <option value="">Select a Product</option>
                                                                    <% locals.products.forEach(element=> { %>
                                                                           
                                                                                <option value="<%= element._id  %>">
                                                                                    <%= element.name %>
                                                                                </option>

                                                                                <% }) %>
                                                                                
                                                                </select>
                                                               
                                                            </div>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label for="discount" class="form-label ">Discount</label>
                                                            <div class="input-group">
                                                                <!-- <span class="input-group-text"><i class="bi bi-percent"></i></span> -->
                                                                <input type="text" name="discount" class="form-control" required />
                                                            </div>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label for="expires" class="form-label ">Expires On</label>
                                                            <input type="date" name="expires" class="form-control" required />
                                                        </div>
                                                        <input type="text" name="offer" class="form-control" hidden />
                                                        <div class="form-group mt-3">
                                                            <button type="submit" class="btn btn-primary btn-block">
                                                                Create Offer
                                                            </button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
            
                                    <table class="table table-striped table-dark mt-5" id="myTable"
                                        style="padding-left: 30px; padding-right: 30px;">
                                        <thead>
                                            <tr style="border-width: 5px; background-color: rgb(47, 37, 37);">
                                                <th scope="col">No</th>
                                                <th scope="col">Title</th>
                                                <th scope="col">Discount</th>
                                                <th scope="col">product</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% (locals.offer || []).forEach((item ,index)=> { %>
                                                <tr>
                                                    <th scope="row">
                                                        <%= index+1 %>
                                                    </th>
                                                    <td>
                                                        <%= item.title %>
                                                    </td>
                                                    <td>
                                                        <%= item.discount %> %
                                                    </td>
                                                    <td>
                                                        <%= item.product %>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>
