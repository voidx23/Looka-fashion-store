      <main class="content">
        <style>
          #loader {
              visibility: hidden;
              display: flex;
              justify-content: center;
              align-items: center;
              position: fixed;
              top: 0;
              left: 0;
              width: 100%;
              height: 100%;
              background-color: rgba(0, 0, 0, 0.5);
              z-index: 9999;
          }
      
          #loader>span {
              display: block;
              width: 50px;
              height: 50px;
              border-radius: 50%;
              border: 5px solid #fff;
              border-top-color: #000;
              animation: spin 1s linear infinite;
          }
      
          /* CSS code for the loader animation */
          @keyframes spin {
              from {
                  transform: rotate(0);
              }
      
              to {
                  transform: rotate(360deg);
              }
          }
      </style>
     
      <h2 style="text-align: center; color: #ffffff; margin-top: 10px; font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;">COUPON MANAGEMENT</h2>
      <main class="content">
          <div id="loader">
              <span></span>
          </div>
          <div class="container-fluid p-0">
              <div class="row">
                  <div class="col-12">
                      <div class="card" style="background-color: #ffffff;">
                          <div class="card-header">
                              <h5 class="card-title mb-0"></h5>
                              <div class="container mt-4">
                                  <div class="row">
                                      <div class="col-md-4">
      
                                          <form action="/admin/coupon" id="cpn-gen-form" method="post">
                                              <div class="mb-3">
                                                  <label style="color: rgb(0, 0, 0);" for="discount" class="form-label">Discount</label>
                                                  <div class="input-group">
                                                      <!-- <span class="input-group-text"><i class="bi bi-percent"></i></span> -->
                                                      <input type="text" name="discount" class="form-control" required>
                                                  </div>
                                              </div>
                                              <div class="mb-3">
                                                  <label style="color: rgb(0, 0, 0);" for="minPurchase" class="form-label">Minimum Purchase</label>
                                                  <div class="input-group">
                                                      <!-- <span class="input-group-text"><i
                                                              class="bi bi-currency-dollar"></i></span> -->
                                                      <input type="text" name="minPurchase" class="form-control" required>
                                                  </div>
                                              </div>
                                              <div class="mb-3">
                                                  <label style="color: rgb(0, 0, 0);" for="expires" class="form-label">Expires On</label>
                                                  <input type="date" name="expires" class="form-control" required>
                                              </div>
                                              <input type="text" name="couponCode" class="form-control" hidden>
                                              <% if (locals.error) { %>
                                                  <p class="error text-danger"><%= error %></p>
                                              <% } %>   
                                              <div class="form-group mt-3">
                                                  <button type="submit" class="btn btn-primary btn-block">Generate
                                                      Coupon</button>
                                              </div>
                                          </form>
      
                                      </div>
                                  </div>
                              </div>
                          </div>
                          <div class="card-body">
                              <table class="table table-bordered table-hover">
                                  <thead class="table-dark">
                                      <tr>
                                          <th scope="col">Coupon Code</th>
                                          <th scope="col">Discount</th>
                                          <th scope="col">Minimum Purchase</th>
                                          <th scope="col">Expires</th>
                                          <th scope="col">option</th>
                                      </tr>
                                  </thead>
                                  <tbody>
      
                                      <% (locals.coupon || []).forEach(element=> { %>
      
                                          <tr data-coupon-id="<%= element._id %>">
                                              <td id="cpn-code">
                                                  <%= element.couponCode %>
                                              </td>
                                              <td id="cpn-discount">
                                                  <%= element.discount %>
                                              </td>
                                              <td id="cpn-minpurchase">
                                                  <%= element.minPurchase %>
                                              </td>
                                              <td id="cpn-date">
                                                  <%= new Date(element.expires).toLocaleString('en-US', { month: 'short' ,
                                                      day: 'numeric' , year: 'numeric' , hour12: true }) %>
                                              </td>
                                              <td>
      
                                                  <% if (element.statusEnable) { %>
                                                      <button class="btn btn-sm btn-danger" id="btn-enable" type="button"
                                                          onclick="disable('<%=element._id %>')">disable</button>
      
                                                      <% } else {%>
                                                          <button class="btn btn-sm btn-success" id="btn-disable"
                                                              type="button"
                                                              onclick="enable('<%=element._id %>')">Enable</button>
      
                                                          <% } %>
      
      
      
                                                              <button class="btn btn-primary edit-coupon-btn"
                                                                  data-coupon-id="<%= element._id %>"
                                                                  type="button">Edit</button>
      
      
                                              </td>
                                          </tr>
                                          <% }) %>
      
                                  </tbody>
